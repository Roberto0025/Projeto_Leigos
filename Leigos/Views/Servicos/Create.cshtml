@model Leigos.Models.Servico

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Servico</h4>
<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-group col-5">
                    <label asp-for="NomeServico" class="control-label"></label>
                    <input asp-for="NomeServico" class="form-control" />
                    <span asp-validation-for="NomeServico" class="text-danger"></span>
                </div>
                <div class="form-group col-3">
                    <label asp-for="CategoriaId" class="control-label"></label>
                    @*<input asp-for="idCategoria" class="form-control" />
                    <span asp-validation-for="idCategoria" class="text-danger"></span>*@
                    <select asp-items="ViewBag.Cat" asp-for"CategoriaId" class="form-control"></select>
                </div>
                <div class="form-group col-2">
                    <label asp-for="NotaServico" class="control-label"></label>
                    <input asp-for="NotaServico" class="form-control" />
                    <span asp-validation-for="NotaServico" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-10">
                    <label asp-for="DescricacaoServico" class="control-label"></label>
                    <input asp-for="DescricacaoServico" class="form-control" />
                    <span asp-validation-for="DescricacaoServico" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-4">
                    <label asp-for="Imagem" class="control-label"></label>
                    <input asp-for="Imagem" class="form-control" />
                    <span asp-validation-for="Imagem" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" /> | <a asp-action="Index" class="btn btn-info">Volar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
